<Window x:Class="Wallofregist.Pages.PasswordRecoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wallofregist.Pages"
        mc:Ignorable="d"
        Title="PasswordRecoveryWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введите вашу почту:" Width="224"/>
            <TextBox x:Name="txtUsernameOrEmail" Margin="0 5" Height="37" Width="599"/>
            <Button Content="Отправить код подтверждения" Click="SendConfirmationCode_Click" Margin="0 10" Width="257"/>
            <TextBlock Text="Введите код подтверждения:" Margin="0 10" Width="258"/>
            <TextBox x:Name="txtConfirmationCode" Margin="0 5" Height="34" Width="585"/>
            <Button Content="Подтвердить" Click="Confirm_Click" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
