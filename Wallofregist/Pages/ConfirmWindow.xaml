<Window x:Class="Wallofregist.Pages.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wallofregist.Pages"
        mc:Ignorable="d"
        Title="ConfirmWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите код подтверждения:" Margin="0 0 0 10" Width="204"/>
            <TextBox x:Name="CodeTextBox" Margin="0 0 0 10" Width="242"/>
            <Button Content="Подтвердить" Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
